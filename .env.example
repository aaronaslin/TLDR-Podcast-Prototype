# Email Configuration
EMAIL_USERNAME=you@example.com
EMAIL_PASSWORD=your-app-password
EMAIL_SUBJECT_FILTER=TLDR AI
EMAIL_FOLDER=AI Newsletters
EMAIL_SEARCH_BY=from
IMAP_SERVER=imap.gmail.com

# Google Cloud TTS (Vertex AI Voice)
GOOGLE_TTS_VOICE_NAME=en-US-Chirp3-HD-Algenib
GOOGLE_TTS_LANGUAGE_CODE=en-US
GOOGLE_TTS_SPEAKING_RATE=1.0
GOOGLE_TTS_PITCH=0.0

# Intro Music Configuration (optional)
INTRO_MUSIC_FILE=/path/to/assets/audio/intro.mp3
INTRO_MUSIC_LEAD_IN=2
INTRO_MUSIC_VOLUME=0.5

# Audio Ducking
ENABLE_DUCKING=true
DUCKED_VOLUME=0.25

# Outro Music Configuration (optional)
OUTRO_MUSIC_FILE=/path/to/assets/audio/outro.mp3
OUTRO_MUSIC_DURATION=5
OUTRO_MUSIC_VOLUME=0.7

# Section Chimes (optional)
SECTION_CHIME_FILE=/path/to/assets/audio/chime.mp3
SECTION_CHIME_VOLUME=0.6

# Google Cloud Storage Configuration
GCP_PROJECT_ID=your-project-id
GCS_BUCKET_NAME=your-bucket
GCS_CREDENTIALS_FILE=/path/to/credentials/credentials.json

# Podcast Metadata
PODCAST_TITLE=TLDR AI Digest
PODCAST_DESCRIPTION=TLDR's AI newsletter in podcast format
PODCAST_AUTHOR=TLDR (Unofficial)
PODCAST_OWNER=Your Name
PODCAST_EMAIL=you@example.com
PODCAST_IMAGE_URL=https://storage.googleapis.com/your-bucket/podcast_image.png

# RSS Feed
RSS_FEED_URL=https://storage.googleapis.com/your-bucket/feed.xml

# Output Locations
OUTPUT_DIR=/path/to/data/output
EPISODES_STORE=/path/to/data/episodes.json
FEED_FILE=/path/to/data/output/feed.xml
SAVE_PROCESSED_TEXT=true

# Logging
LOG_LEVEL=INFO
